<%= simple_form_for(carpet) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :condition, collection: ["poor", "slightly used", "good", "like new"] %>
  <%= f.input :price %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class:"btn btn-dark" %>
<% end %>
