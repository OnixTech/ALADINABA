  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% carpets.each do |carpet| %>
      <tr>
        <td><%= carpet.name %></td>
        <td><%= carpet.address %></td>
        <td><%= link_to 'Show', carpet %></td>
        <td><%= link_to 'Edit', edit_carpet_path(carpet) %></td>
        <td><%= link_to 'Destroy', carpet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
