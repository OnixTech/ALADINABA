<div class="form-container" data-controller="datepickr">
<%= simple_form_for([@carpet, @booking]) do |f| %>
  <%= f.input :booked_from, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :booked_until, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.submit class:"btn btn-dark" %>
<% end %>
</div>
